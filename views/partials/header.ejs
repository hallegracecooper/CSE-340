<!-- views/partials/header.ejs -->
<header id="top-header">
  <span class="siteName">
    <a href="/" title="Return to home page">CSE Motors</a>
  </span>
  <div id="tools">
    <% if (locals.loggedin && locals.accountData) { %>
      <a href="/account/manage" title="Account Management">
        Welcome <%= locals.accountData.firstName || "User" %>
      </a>
      &nbsp;|&nbsp;
      <a href="/account/logout" title="Logout">Logout</a>
    <% } else { %>
      <a title="Click to log in" href="/account/login">My Account</a>
    <% } %>
  </div>
</header>