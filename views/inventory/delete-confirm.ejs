<!-- views/inventory/delete-confirm.ejs -->

<div class="delete-form-container">
    <h1>Delete Vehicle</h1>
  
    <!-- Display flash messages returned from the controller -->
    <%- messages() %>
  
    <!-- Display server-side validation errors, if any exist -->
    <% if (errors && errors.array && errors.array().length > 0) { %>
        <ul class="notice">
          <% errors.array().forEach(function(error) { %>
            <li><%= error.msg %></li>
          <% }); %>
        </ul>
    <% } %>
  
    <!-- Form for confirming deletion of an existing vehicle -->
    <form action="/inv/delete" method="post" id="deleteForm">
      
      <!-- Hidden field to hold the inventory id -->
      <input type="hidden" name="inv_id" value="<%= typeof inv_id !== 'undefined' ? inv_id : '' %>">
      
      <!-- Vehicle Make -->
      <label for="inv_make">Make</label>
      <input 
        type="text" 
        id="inv_make" 
        name="inv_make" 
        value="<%= typeof inv_make !== 'undefined' ? inv_make : '' %>" 
        readonly
      >
  
      <!-- Vehicle Model -->
      <label for="inv_model">Model</label>
      <input 
        type="text" 
        id="inv_model" 
        name="inv_model" 
        value="<%= typeof inv_model !== 'undefined' ? inv_model : '' %>" 
        readonly
      >
  
      <!-- Vehicle Year -->
      <label for="inv_year">Year</label>
      <input 
        type="number" 
        id="inv_year" 
        name="inv_year" 
        value="<%= typeof inv_year !== 'undefined' ? inv_year : '' %>" 
        readonly
      >
  
      <!-- Vehicle Price -->
      <label for="inv_price">Price</label>
      <input 
        type="number" 
        id="inv_price" 
        name="inv_price" 
        step="0.01"
        value="<%= typeof inv_price !== 'undefined' ? inv_price : '' %>" 
        readonly
      >
  
      <!-- Confirmation message -->
      <p>Confirm Deletion - The delete is permanent and cannot be undone.</p>
      
      <!-- Delete Button -->
      <button type="submit">Delete</button>
    </form>
  </div>  
