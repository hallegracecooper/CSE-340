<!-- views/account/login.ejs -->
<h1><%= title %></h1>

<!-- Display flash messages using the messages helper -->
<%- messages() %>

<!-- Display Validation Errors if errors variable exists and has content -->
<% if (typeof errors !== 'undefined' && errors.array && errors.array().length > 0) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }); %>
  </ul>
<% } %>

<!-- Login Form -->
<form id="loginForm" class="login-form" action="/account/login" method="post">
  <!-- Email Field -->
  <label for="account_email">Email:</label>
  <input 
    type="email" 
    id="account_email" 
    name="account_email" 
    placeholder="Enter your email" 
    required
    value="<%= typeof locals !== 'undefined' && locals.account_email ? locals.account_email : '' %>"
  />

  <!-- Password Field -->
  <label for="account_password">Password:</label>
  <!-- Password requirements reminder -->
  <div class="password-requirements">
    Password must be at least 12 characters and contain at least 1 number, 1 uppercase letter, and 1 special character.
  </div>
  <input 
    type="password" 
    id="account_password" 
    name="account_password" 
    placeholder="Enter your password" 
    required
    pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
  />

  <button type="submit">LOGIN</button>
</form>

<!-- Link to sign-up page -->
<p>No account? <a href="/account/register">Sign-up</a></p>
