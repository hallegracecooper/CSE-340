<!-- views/account/account.ejs -->

<%- messages() %>

<!-- Greet the client using their first name -->
<h2>Welcome <%= locals.accountData.account_firstname %></h2>

<!-- Link to update account information (visible to all clients) -->
<p>
  <a href="/account/update/<%= locals.accountData.account_id %>" title="Update Account Information">
    Update Account Information
  </a>
</p>

<!-- Only for Employee or Admin: Include Inventory Management section -->
<% if (locals.accountData.account_type === "Employee" || locals.accountData.account_type === "Admin") { %>
  <h3>Inventory Management</h3>
  <p>
    <a href="/inv" class="management-link" title="Access Inventory Management">
      Access Inventory Management
    </a>
  </p>
<% } %>